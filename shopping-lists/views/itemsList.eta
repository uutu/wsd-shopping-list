<h1><%= it.list.name %></h1>

<% if (it.currentList) { %>

<ul>
  <li> <%= it.currentList.name %> 
    <form method="POST" action="/lists/<%= it.list.id %>/items/<%= it.currentList.id %>">
    <input type="submit" value="Mark as collected!" />
    </form>
  </li>
</ul>



<% } else { %>

<h2>Add an item to a shopping list</h2>

<form action="/lists/<%= it.list.id %>/items" method="POST">
  <input type="text" name="name" />
  <input type="submit" value="Add an item!" />
</form>

<% } %>